@model List<ProductDto>
@{
    ViewData["Title"] = "Home Page";
    ViewData["UserName"] = ViewBag.UserName;
}


<div class="">
    <div class="d-flex justify-content-between">
        <span class="bold" style="font-size: 30px">لیست محصولات</span>
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="AddProduct">ثبت محصول جدید</a>
    </div>
    <hr />
    <table class="w-100 table table-striped table-hover">
        <tr>
            <td>شناسه</td>
            <td>دسته بندی</td>
            <td>عنوان</td>
            <td>توضیحات</td>
            <td>قیمت</td>
            <td>عملیات</td>
        </tr>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductCategoryTitle</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a class="btn btn-sm btn-outline-info" href="">مشاهده جزئیات</a>
                        <a class="btn btn-sm btn-outline-warning" href="">ویرایش</a>
                        <a class="btn btn-sm btn-outline-danger" href="">حذف</a>
                        @* <partial name="_ActionButtonsPartial" model="item"/> *@
                    </td>
                </tr>
            }
        }
       

    </table>
</div>

@section AdditionalFooterText
{
    <h1>این متن از سکشن فوتر می آید</h1>
}

                    
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
